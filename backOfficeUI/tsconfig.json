{
  "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "lib": [
          "es6",
          "dom"
      ],
      "mapRoot": "./",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
          "./node_modules/@types"
      ],
      "types": [
          "node"
      ],
      "noUnusedLocals": true,
      "pretty": true,
      "removeComments": true
  },
  "files": ["typings.d.ts"],
  "include": [
        "src/**/*"
    ],
  "exclude": [
      "**/*.spec.ts",
      "test.ts",
      "tests"
  ]
}